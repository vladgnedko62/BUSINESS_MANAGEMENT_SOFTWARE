        <TextBox x:Name="_txtSize" BorderThickness="2"  FontSize="25" Margin="189,192,0,0" TextWrapping="Wrap" Text="" Height="53" VerticalAlignment="Top"  HorizontalAlignment="Left" Width="257"/>
